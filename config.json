{
	"assets": {
		"app.css": [
			"+assets/css/*s.less",
			"assets/css/reset.css",
			"assets/css/basic.less",
			"patterns/**/css/*.less",
			"patterns/**/css/modifier/*.less"
		],
		"app.2.css": [
			"+assets/css/*s.less",
			"patterns/**/css/*.less"
		],
		"app.js": [
			"assets/vendor/es6-promise/promise.min.js",
			"assets/vendor/jquery/dist/jquery.min.js",
			"assets/vendor/terrific/dist/terrific.min.js",
			"assets/vendor/handlebars/handlebars.runtime.min.js",
			"assets/js/*.js",
			"patterns/**/js/*.js",
			"patterns/**/js/decorator/*.js",
			"patterns/**/template/*.js",
			"patterns/**/template/partial/*.js"
		]
	},
	"code": {
		"compatibility": {
			"browsers": ["> 1%", "last 2 versions", "ie 9", "android 4", "Firefox ESR", "Opera 12.1"]
		}
	},
	"nitro": {
		"patterns": {
			"atom": {
				"template": "project/blueprints/pattern",
				"path": "patterns/atoms",
				"pattern_prefix": "a"
			},
			"molecule": {
				"template": "project/blueprints/pattern",
				"path": "patterns/molecules",
				"pattern_prefix": "m"
			},
			"organism": {
				"template": "project/blueprints/pattern",
				"path": "patterns/organisms",
				"pattern_prefix": "o"
			}
		}
	}

}
