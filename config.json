{
	"assets": {
		"app.css": [
			"+assets/css/example/*s.less",
			"+assets/css/dep/*s.less",
			"assets/css/example/reset.css",
			"assets/css/*.less",
			"patterns/**/css/*.less",
			"patterns/**/css/modifier/*.less"
		],
		"vendor.css": [
			"assets/css/reset.css",
			"assets/css/*"
		],
		"app.brand.css": [
			"+assets/css/example/*s.less",
			"+assets/css/dep/*s.less",
			"assets/css/basic.less",
			"patterns/**/css/*.less"
		],
		"app.js": [
			"assets/js/*.js",
			"patterns/**/js/*.js",
			"patterns/**/js/decorator/*.js",
			"patterns/**/template/*.js",
			"patterns/**/template/partial/*.js"
		],
		"vendor.js": [
			"node_modules/babel-polyfill/dist/polyfill.min.js",
			"node_modules/jquery/dist/jquery.min.js",
			"node_modules/terrific/dist/terrific.min.js",
			"node_modules/handlebars/dist/handlebars.runtime.min.js"
		],
		"app.brand.js": [
			"assets/js/*.js",
			"patterns/**/js/*.js",
			"patterns/**/js/decorator/*.js",
			"patterns/**/template/*.js",
			"patterns/**/template/partial/*.js"
		]
	},
	"code": {
		"compatibility": {
			"browsers": ["> 1%", "last 2 versions", "ie 9", "android 4", "Firefox ESR", "Opera 12.1"]
		},
		"validation": {
			"jsonSchema": {
				"logMissingSchemaAsWarning": true,
				"logMissingSchemaAsError": false
			}
		}
	},
	"exporter": {
		"dest": "dist",
		"i18n": [],
		"publics": true,
		"renames": [
			{
				"src": "dist/assets/**",
				"base": "dist/assets",
				"dest": "dist/"
			}
		],
		"replacements": [
			{
				"glob": ["dist/*.html", "dist/css/*.css"],
				"replace": [
					{
						"from": "/assets/",
						"to": ""
					}
				]
			},
			{
				"glob": ["dist/js/*.js"],
				"replace": [
					{
						"from": "/api",
						"to": "api"
					}
				]
			},
			{
				"glob": ["dist/*.html"],
				"replace": [
					{
						"from": "([a-z]+)\\.(css|js)",
						"to": "$1.min.$2"
					}
				]
			}
		],
		"views": true,
		"zip": false
	},
	"nitro": {
		"patterns": {
			"aaa": {
				"template": "project/blueprints/pattern",
				"path": "patterns/aaa",
				"pattern_prefix": "a"
			},
			"atom": {
				"template": "project/blueprints/pattern",
				"path": "patterns/atoms",
				"pattern_prefix": "a"
			},
			"molecule": {
				"template": "project/blueprints/pattern",
				"path": "patterns/molecules",
				"pattern_prefix": "m"
			},
			"organism": {
				"template": "project/blueprints/pattern",
				"path": "patterns/organisms",
				"pattern_prefix": "o"
			}
		}
	}
}
